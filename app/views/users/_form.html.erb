<h3> Registration Form </h3>


<%= form_for @user do |f| %>

<%= f.label :username %> <br>
<%= f.text_field :username %> <br><br>

<%= f.label :insurer %> <%= '(Check if you are an Insurer)' %> <br>
<%= f.check_box :insurer %> <br><br>

<%= f.label :password %> <br>
<%= f.password_field :password %> <br> <br>

<%= f.submit %> <br> <br>


<%= @user.errors[:username] %>

<% end %>
