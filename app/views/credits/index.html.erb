<label> <%= current_user.username%> Credits</label><br><br>

<table class = "table">
<thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>

  <tr>
    <td> Credit ID </td>
    <td> Name </td>
    <td> Sector </td>
    <td> Rating </td>
    <td> State </td>

  </tr>

<% current_user.credits.order("credit_name").each do |credit| %>
<tr>
  <td> <%= credit.id %> </td>
  <td> <%= link_to credit.credit_name, credit_path(credit) %> </td>
  <td> <%= credit.sector %> </td>
  <td> <%= credit.rating %> </td>
  <td> <%= credit.state %> </td>

</tr>

<% end %>
</tbody>
</table>
<br>

<%= link_to "All Exposures", exposures_path %>
