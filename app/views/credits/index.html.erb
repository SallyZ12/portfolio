

<table class = "table">
<caption> <h4> <%= "#{current_user.username} Credits" %> </h4> </caption>

<thead>

  <tr>
    <th> ID </th>
    <th> Name </th>
    <th> Sector </th>
    <th> Ext. Rating </th>
    <th> State </th>
  </tr>
</thead>
<% @credits.order("credit_name").each do |credit| %>
<tbody>
<tr>
  <td> <%= credit.id %> </td>
  <td> <%= link_to credit.credit_name, credit_path(credit) %> </td>
  <td> <%= credit.sector %> </td>
  <td> <%= credit.rating %> </td>
  <td> <%= credit.state %> </td>
</tr>
<% end %>
</tbody>
</table>
<br>



<%= link_to "Add Existing Credit to Portfolio or Create a New Credit", new_user_credit_path(@user) %> <br><br><br>
