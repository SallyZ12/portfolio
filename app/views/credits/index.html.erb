    <td> Company </td>

  </tr>

<% @credits.order("credit_name").each do |credit| %>
<tr>
  <td> <%= credit.id %> </td>
  <td> <%= credit.credit_name %> </td>
  <td> <%= credit.sector %> </td>
  <td> <%= credit.rating %> </td>
  <td> <%= credit.state %> </td>
  <td> <%=@user.username %> </td>
</tr>

<% end %>
</tbody>
</table>
